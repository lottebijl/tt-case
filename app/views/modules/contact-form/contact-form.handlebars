<section class="contact">
  <div class="row">
    <div class="columns small-24">
      <h1 class="contact__title">We would love to hear from you</h1>
    </div>
  </div>
  <div class="row">
    <form class="contact__form">
      <div class="contact__fields">
        <div class="columns small-24 medium-12">
          <input type="text" placeholder="First name" required/>
        </div>
        <div class="columns small-24 medium-12">
          <input type="text" placeholder="Last name" required/>
        </div>
        <div class="columns small-24 medium-12">
          <input type="text" placeholder="Your e-mail address" required/>
        </div>
        <div class="columns small-24 medium-12">
          <input type="text" placeholder="Your phone number (optional)"/>
        </div>
        <div class="columns small-24">
          <textarea placeholder="Your message..."></textarea>
        </div>
      </div>
      <div class="columns small-24">
        <input type="submit" class="btn btn-default btn-submit" value="Send"/>
      </div>
    </form>
  </div>
</section>