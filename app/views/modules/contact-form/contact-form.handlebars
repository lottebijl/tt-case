<section class="contact">
  <div class="row">
    <div class="columns small-24">
      <h1 class="contact__title">We would love to hear from you</h1>
    </div>
  </div>
  <div class="row">
    <form class="contact__form" data-abide="ajax" novalidate>
      <div data-abide-error class="alert callout error" style="display:none;">
        <p><i class="icon icon-error"></i>Please complete the form and try again.</p>
      </div>
      <div class="alert callout success" style="display:none;">
        <p><i class="icon icon-check"></i>Thank you, we have received your message.</p>
      </div>
      <div class="contact__fields">
        <div class="columns small-24 medium-12">
          <input type="text" placeholder="First name" id="firstName" required/>
          <span class="form-error" data-form-error-for="firstName">
            We need your first name.
          </span>
        </div>
        <div class="columns small-24 medium-12">
          <input type="text" placeholder="Last name" id="lastName" required/>
          <span class="form-error" data-form-error-for="lastName">
            We need your last name.
          </span>
        </div>
        <div class="columns small-24 medium-12">
          <input type="email" placeholder="Your e-mail address" id="email" pattern="email" required/>
          <span class="form-error" data-form-error-for="email">
            Please use a valid e-mail address.
          </span>
        </div>
        <div class="columns small-24 medium-12">
          <input type="text" placeholder="Your phone number (optional)"/>
        </div>
        <div class="columns small-24">
          <textarea placeholder="Your message..." required id="message"></textarea>
          <span class="form-error" data-form-error-for="message">
            Sorry, your message canâ€™t be empty.
          </span>
        </div>
      </div>
      <div class="columns small-24">
        <input type="submit" class="btn btn-default btn-submit" value="Send"/>
      </div>
    </form>
  </div>
</section>